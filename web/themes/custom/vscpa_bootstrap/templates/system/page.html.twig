{#
/**
 * @file
 * Default theme implementation to display a single page.
 *
 * The doctype, html, head and body tags are not in this template. Instead they
 * can be found in the html.html.twig template in this directory.
 *
 * Available variables:
 *
 * General utility variables:
 * - base_path: The base URL path of the Drupal installation. Will usually be
 *   "/" unless you have installed Drupal in a sub-directory.
 * - is_front: A flag indicating if the current page is the front page.
 * - logged_in: A flag indicating if the user is registered and signed in.
 * - is_admin: A flag indicating if the user has permission to access
 *   administration pages.
 *
 * Site identity:
 * - front_page: The URL of the front page. Use this instead of base_path when
 *   linking to the front page. This includes the language domain or prefix.
 *
 * Page content (in order of occurrence in the default page.html.twig):
 * - title_prefix: Additional output populated by modules, intended to be
 *   displayed in front of the main title tag that appears in the template.
 * - title: The page title, for use in the actual content.
 * - title_suffix: Additional output populated by modules, intended to be
 *   displayed after the main title tag that appears in the template.
 * - messages: Status and error messages. Should be displayed prominently.
 * - tabs: Tabs linking to any sub-pages beneath the current page (e.g., the
 *   view and edit tabs when displaying a node).
 * - node: Fully loaded node, if there is an automatically-loaded node
 *   associated with the page and the node ID is the second argument in the
 *   page's path (e.g. node/12345 and node/12345/revisions, but not
 *   comment/reply/12345).
 *
 * Regions:
 * - page.header: Items for the header region.
 * - page.navigation: Items for the navigation region.
 * - page.navigation_collapsible: Items for the navigation (collapsible) region.
 * - page.highlighted: Items for the highlighted content region.
 * - page.help: Dynamic help text, mostly for admin pages.
 * - page.content: The main content of the current page.
 * - page.sidebar_top: Items for the top sidebar.
 * - page.sidebar_bottom: Items for the bottom sidebar.
 * - page.footer: Items for the footer region.
 *
 * @ingroup templates
 *
 * @see template_preprocess_page()
 * @see html.html.twig
 */
#}

{% block library_insert %}
{% endblock %}

{# Flyout Menus #}
<div class="fly-out" data-spy="affix" data-offset-top="85">
  <div class="menu-button expand">
    <a class="btn btn-header" id="main-menu-button"><span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true"></span><span class="text">Menu</span></a>
  </div>
  <a class="btn btn-header btn-login" href="/user/login"><span class="icon-user">&nbsp;</span><span class="text">Log In</span></a>
  <a class="btn btn-header btn-logout" href="/user/logout"><span class="icon-user">&nbsp;</span><span class="text">Log Out</span></a>
  <a href="{{ url('<front>') }}">
    <img src="{{ base_path ~ directory }}/logo.svg?q=rebrandcolor" alt="{{ 'Home'|t }}" class="main-logo"/>
  </a>

  {# Cart Block #}
  {% if page.cart %}
    {{ page.cart }}
  {% endif %}

  <div class="search-button expand">
    <a class="btn btn-header" id="search-button"><span class="glyphicon glyphicon-search" aria-hidden="true"></span><span class="text">Search</span></a>
  </div>
</div>
<div class="fly-out-menu left">
  <ul class="clearfix row-fluid wrapper">
      {{ page.menu_flyout }}
  </ul>
</div>
<div class="fly-out-menu right">
  <ul class="clearfix row-fluid wrapper">
      {{ page.search_flyout }}
  </ul>
</div>

<div class="cover-wrapper">
  {% block cover_content %}
    {{ page.cover }}
  {% endblock %}
</div>

<div class="container-fluid">
  {% block custom_alert %}
  {% endblock %}
  <div class="row">
    {# Top Full Width #}
    {% if page.top_full_width %}
      {% block top_full_width %}
        {{ page.top_full_width }}
      {% endblock %}
    {% endif %}
  </div>
</div>

{# Main #}
{% block main %}
  <div role="main" class="main-container container js-quickedit-main-content">
    <div class="row">

      {# Sidebar Top #}
      {% if page.sidebar_top %}
        {% block sidebar_top %}
          <aside class="col-xs-12 col-lg-4 sidebar-top" role="complementary">
            {{ page.sidebar_top }}
          </aside>
        {% endblock %}
      {% endif %}

      {# Content #}
      {%
        set content_classes = [
          page.sidebar_top and page.sidebar_bottom ? 'col-xs-12 col-lg-8',
          page.sidebar_top and page.sidebar_bottom is empty ? 'col-xs-12 col-lg-8',
          page.sidebar_bottom and page.sidebar_top is empty ? 'col-xs-12 col-lg-8',
          page.sidebar_top is empty and page.sidebar_bottom is empty ? 'col-xs-12'
        ]
      %}

      <section{{ content_attributes.addClass(content_classes, 'main-content') }}>
        {# System #}
        {% if page.system %}
          {% block system %}
            {{ page.system }}
          {% endblock %}
        {% endif %}

        {# Content #}
        {% block content %}
          <a id="main-content"></a>
          {{ page.content }}
        {% endblock %}
      </section>

      {# Sidebar Bottom #}
      {% if page.sidebar_bottom %}
        {% block sidebar_bottom %}
          <aside class="col-xs-12 col-lg-4 sidebar-bottom" role="complementary">
            {{ page.sidebar_bottom }}
          </aside>
        {% endblock %}
      {% endif %}

    </div>
  </div>

  <div class="container-fluid">
    <div class="row">
      {# Bottom Bar #}
      {% if page.bottom_full_width %}
        {% block bottom_full_width %}
          {{ page.bottom_full_width }}
        {% endblock %}
      {% endif %}
    </div>
  </div>
{% endblock %}

{% if page.footer %}
  {% block footer %}
    <footer class="footer region region-footer clearfix" role="contentinfo">
      {{ page.footer }}
      <div class="footer-texture footer-texture-bottom"></div>
    </footer>
  {% endblock %}
{% endif %}
